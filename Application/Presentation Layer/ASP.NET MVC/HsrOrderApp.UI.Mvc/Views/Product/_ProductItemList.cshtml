@model HsrOrderApp.UI.Mvc.Models.ProductListViewModel
@using HsrOrderApp.UI.Mvc.Resources

<p>
    @Html.ActionLink(@Strings.NewCommand, "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Strings.ProductDetailView_ProductName
        </th>
        <th>
            @Strings.ProductDetailView_ProductNumber
        </th>
        <th>
            @Strings.ProductDetailView_Category
        </th>
        <th>
            @Strings.ProductDetailView_QuantityPerUnit
        </th>
        <th>
            @Strings.ProductDetailView_PricePerUnit
        </th>
        <th>
            @Strings.ProductDetailView_UnitsOnStock
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Items)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityPerUnit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ListUnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitsOnStock)
            </td>
            <td>
                @Html.ActionLink(@Strings.EditCommand, "Edit", new { id = item.Id }, new { @class = "btn btn-default" })
                @Html.ActionLink(@Strings.DetailsCommand, "Details", new { id = item.Id }, new { @class = "btn btn-default" })
                @Html.ActionLink(@Strings.DeleteCommand, "Delete", new { id = item.Id }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }
</table>
