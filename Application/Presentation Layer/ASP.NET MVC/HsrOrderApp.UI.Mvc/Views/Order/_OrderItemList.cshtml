@model HsrOrderApp.UI.Mvc.Models.OrderListViewModel
@using HsrOrderApp.UI.Mvc.Resources

<p>
    @Html.ActionLink(@Strings.NewCommand, "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Strings.OrderView_Id
        </th>
        <th>
            @Strings.OrderView_Customer
        </th>
        <th>
            @Strings.OrderView_Status
        </th>
        <th>
            @Strings.OrderView_OrderDate
        </th>
        <th>
            @Strings.OrderStatus_Shipped
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Items)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippedDate)
            </td>
            <td>
                @Html.ActionLink(@Strings.EditCommand, "Edit", new { id = item.Id }, new { @class = "btn btn-default" })
                @Html.ActionLink(@Strings.DetailsCommand, "Details", new { id = item.Id }, new { @class = "btn btn-default" })
                @Html.ActionLink(@Strings.DeleteCommand, "Delete", new { id = item.Id }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }

</table>
