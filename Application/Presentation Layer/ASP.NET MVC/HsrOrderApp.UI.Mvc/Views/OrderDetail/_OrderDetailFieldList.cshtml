@model HsrOrderApp.UI.Mvc.Models.OrderDetailViewModel
@using HsrOrderApp.UI.Mvc.Resources

<div class="form-group">
    <div class="control-label col-md-2">@Strings.OrderDetailDetailView_Product</div>
    <div class="col-md-10">
        @Html.DropDownListFor(
            model => model.SelectedItem.ProductId,
            new SelectList(Model.Products, "Id", "Name"),
            new { @class = "form-control" }
        )
        @Html.ValidationMessageFor(model => model.SelectedItem.ProductId, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SelectedItem.ProductName, new { Value = "Dummy Value" })
    </div>
</div>

<div class="form-group">
    <div class="control-label col-md-2">@Strings.OrderDetailDetailView_Quantity</div>
    <div class="col-md-10">
        @Html.EditorFor(model => model.SelectedItem.QuantityInUnits, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.SelectedItem.QuantityInUnits, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    <div class="control-label col-md-2">@Strings.OrderDetailDetailView_Price</div>
    <div class="col-md-10">
        @Html.EditorFor(model => model.SelectedItem.UnitPrice, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
        @Html.ValidationMessageFor(model => model.SelectedItem.UnitPrice, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    <div class="control-label col-md-2">@Strings.OrderDetailDetailView_TotalPrice</div>
    <div class="col-md-10">
        @Html.EditorFor(model => model.SelectedItem.TotalPrice, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
        @Html.ValidationMessageFor(model => model.SelectedItem.TotalPrice, "", new { @class = "text-danger" })
    </div>
</div>