@model HsrOrderApp.UI.Mvc.Models.CustomerListViewModel
@using HsrOrderApp.UI.Mvc.Resources

<p>
    @Html.ActionLink(@Strings.NewCommand, "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Strings.CustomerDetailView_Anrede
        </th>
        <th>
            @Strings.CustomerDetailView_Name
        </th>
        <th>
            @Strings.CustomerDetailView_FirstName
        </th>
        <th>
            @Strings.CustomerView_OpenOrders
        </th>
        <th>
            @Strings.CustomerView_TotalOrders
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Items)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Anrede)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfOpenOrders)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfTotalOrders)
            </td>
            <td>
                @Html.ActionLink(@Strings.EditCommand, "Edit", new { id = item.Id }, new { @class = "btn btn-default" })
                @Html.ActionLink(@Strings.DetailsCommand, "Details", new { id = item.Id }, new { @class = "btn btn-default" })
                @Html.ActionLink(@Strings.DeleteCommand, "Delete", new { id = item.Id }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }

</table>
