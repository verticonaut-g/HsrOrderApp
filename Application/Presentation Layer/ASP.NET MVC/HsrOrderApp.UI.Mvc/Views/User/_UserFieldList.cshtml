@model HsrOrderApp.UI.Mvc.Models.UserViewModel
@using HsrOrderApp.UI.Mvc.Resources

<div class="form-group">
    <div class="control-label col-md-2">@Strings.UserDetailView_UserName</div>
    <div class="col-md-10">
        @Html.EditorFor(model => model.Model.UserName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Model.UserName, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    <div class="control-label col-md-2">@Strings.UserDetailView_Password</div>
    <div class="col-md-10">
        @Html.EditorFor(model => model.Model.Password, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Model.Password, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    <div class="control-label col-md-2">@Strings.UserDetailView_Customer</div>
    <div class="col-md-10">
        @Html.DropDownListFor(
            model => model.Model.CustomerId,
            new SelectList(Model.Customers, "Id", "FullName"),
            new { @class = "form-control" }
        )
        @Html.ValidationMessageFor(model => model.Model.CustomerId, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Model.CustomerName, new { Value = "Dummy Value" })
    </div>
</div>